<Window x:Class="Metropolis.Views.ProgressLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Metrobot Progress Log" Height="300" Width="300"  WindowStartupLocation="CenterScreen" Icon="..\Properties/logo.ico" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" TextAlignment="Center" FontWeight="DemiBold">Metrobot is working at it please wait...</TextBlock>
        <ProgressBar Grid.Row="1" Minimum="0" Maximum="100" Name="StatusBar" IsIndeterminate="True" Height="20" Margin="30,5,30,5"/>
        <TextBlock Grid.Row="2" Name="Log" Margin="0,5,0,5"/>
        <Button Grid.Row="3" Name="Cancel" Content="Cancel" Width="70" Margin="0,5,0,5" Click="CloseLog" />
    </Grid>
</Window>
