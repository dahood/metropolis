<UserControl x:Class="Metropolis.Views.UserControls.Spinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Metropolis.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="56.835" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" VerticalAlignment="Center" TextAlignment="Center" FontSize="9" FontWeight="DemiBold">Metrobot is working at it please wait...</TextBlock>
        <ProgressBar Grid.Row="1" Minimum="0" Maximum="100" Name="StatusBar" IsIndeterminate="True" Height="20" Margin="30,5,30,5"/>    
    </Grid>
</UserControl>
