<Window x:Class="Metropolis.Views.UserPreferences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="User Preferences" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="FxCop Binary Location:" />
        <TextBox Grid.Row="0" Grid.Column="1" Name="FxCopBinaryLocationTextBox" Text="C:\Program Files (x86)\Microsoft Visual Studio 14.0" VerticalAlignment="Center" />
        <Button Grid.Row="0" Grid.Column="2" Content="..." Click="SelectFxCopLocation" Width="25" Height="25" />
        
    </Grid>
</Window>