{
  "parserOptions": {
    "sourceType": "module"
    //"ecmaFeatures": {
    //  "experimentalObjectRestSpread": true
    //}
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "max-statements": [
      "error",
      { "max": 0 }
    ],
    "max-params": [
      "error",
      { "max": 0 }
    ],
    "complexity": [
      "error",
      { "max": 0 }
    ],
    "max-depth": [
      "error",
      { "max": 0 }
    ],
    "default-case": "error"
  }
}