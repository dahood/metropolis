{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "complexity": [
      "error",
      { "max": 0 }
    ],
    "max-depth": [
      "error",
      { "max": 0 }
    ],
    "max-params": [
      "error",
      { "max": 0 }
    ],
    "max-statements": [
      "error",
      { "max": 0 }
    ],
    "default-case": "error"
  }
}